        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity" android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent" android:layout_height="220dp">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="200dp" android:orientation="vertical"
                        android:background="@drawable/profile_header">

        </RelativeLayout>
    </LinearLayout>
    <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_menu_camera"
            android:id="@+id/imageButton"/>


</LinearLayout>